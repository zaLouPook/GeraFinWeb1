@model Login

@inject SignInManager<GeraFin.Models.ViewModels.GeraFinWeb.ApplicationUser> SignInManager

@{
   ViewData["Title"] = "Log in";
}
<div class="login-box">
   <div class="login-logo">
      <a href="/"><b>GERA</b>FIN</a>
   </div>
   <!-- /.login-logo -->
   <div class="card">
      <div class="card-body login-card-body">
         <p class="login-box-msg">Sign in to start your session</p>

         <form asp-route-returnurl="@ViewData["ReturnUrl"]" name="Login" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="input-group mb-3">
               <input asp-for="Email" name="Email" type="email" value="" id="Emaild" class="form-control" placeholder="Email"/>
               <div class="input-group-append">
                  <div class="input-group-text">
                     <span class="fas fa-envelope"></span>
                  </div>
               </div>
            </div>
            <div class="input-group mb-3">
               <input asp-for="Password" type="password" value="" class="form-control" placeholder="Password" />
               <div class="input-group-append">
                  <div class="input-group-text">
                     <span class="fas fa-lock"></span>
                  </div>
               </div>
            </div>
            <div class="row">
               <div class="col-8">
                  <div class="icheck-primary">
                     <input type="checkbox" id="remember">
                     <label for="remember">
                        Remember Me
                     </label>
                  </div>
               </div>
               <!-- /.col -->
               <div class="col-4">
                  <button type="submit" class="btn btn-primary btn-block">Sign In</button>
               </div>
               <!-- /.col -->
            </div>
         </form>

         <div class="social-auth-links text-center mb-3">
            <p>- OR -</p>
            <a href="#" class="btn btn-block btn-primary">
               <i class="fab fa-facebook mr-2"></i> Sign in using Facebook
            </a>
            <a href="#" class="btn btn-block btn-danger">
               <i class="fab fa-google-plus mr-2"></i> Sign in using Google+
            </a>
         </div>
         <!-- /.social-auth-links -->

         <p class="mb-1">
            <a href="/Account/ForgotPassword">I forgot my password</a>
         </p>
      </div>
      <!-- /.login-card-body -->
   </div>
</div>

<script type="text/javascript">

   function GetLoginName() {
      var EmailId = document.getElementById("Emaild")
      var Hval = document.getElementById("AccountName")
      Hval.value = EmailId.value
   }

   function GoToForGotPassword() {
      window.location = "Account/ForgotPassword"
   }
   
</script>
